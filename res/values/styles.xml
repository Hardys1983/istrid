<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="Pannel">
        <item name="android:background">#ff2400</item>
    </style>
    
    <style name="HorizontalPannel" parent="Pannel">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="VerticalPannel" parent="Pannel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="ToggleButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textOn"></item>
        <item name="android:textOff"></item>
        <item name="android:checked">true</item>
    </style>
    
    <style name="ToggleFlash" parent="ToggleButton">
        <item name="android:background">@drawable/toggle_flash_bg</item>
    </style>
    
    <style name="ToggleCamera" parent="ToggleButton">
        <item name="android:background">@drawable/toggle_camera_bg</item>
    </style>
    
    <style name="ImageButtonTransparent">
        <item name="android:background">@android:color/transparent</item>
    </style>
    
    <style name="VersionText">
        <item name="android:textColor">#D5F407</item>
        <item name="android:textSize">14dip</item>
    </style>
    
</resources>
